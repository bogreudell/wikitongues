body
	&.single-projects
		.wt_project
			&__content
				width 90%
				max-width 600px
				margin $margin4 auto $margin2
				
				h1
					headerType($black)
					margin-bottom $margin1
				
				h2
					subheadType($black)
					margin-bottom $margin1
					
				p
					bodyType($black)
					margin-bottom $margin1
					
					a
						bodyTypeLink($blue)
						
				img
					display block
					max-width 100%
					height auto
					margin auto
				
				&>div
					margin auto !important
					text-align center
					background $black
					
					img
						width 100%
						height auto
					
					.wp-caption-text
						margin-top $margin0
						padding-bottom $margin0
						bodyTypeBold($parchment)

@media all and (max-width:$mobile)
	body
		&.single-projects
			.wt_project
				&__content
					h1
						headerTypeMobile()
					
					h2
						subheadTypeMobile()