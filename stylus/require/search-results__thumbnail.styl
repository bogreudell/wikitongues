.wt_search-results
	&__thumbnail
		display flex
		flex-direction row
		align-items center
		margin-bottom 3rem
				
		&--image
			width 300px
			height 170px
			background-size cover
			background-position center center
			background-repeat no-repeat
		
		&--no-image
			width 300px
			height 170px
			background $grey
		
		&--copy
			display inline-block
			padding-left 3rem
			text--strong($black)
			
			p
				width 25rem
				margin-bottom 1.5rem
			
			a
				button--small($blue,$parchment)