.wt_content-block--thirds
	display inline-block
	position relative
	margin 1.5%
	width 30%
	
	&:before
		content ''
		z-index -1
		position absolute
		top 10px
		left 10px
		width 100%
		height 100%
		background $blue
	
	&__image
		width 100%
		padding-bottom 33%
		background-size cover
		background-repeat no-repeat
