.wt_content-block--thirds
	display inline-block
	position relative
	margin 1.5%
	width 30%
	
	&:before
		content ''
		z-index -1
		position absolute
		top 1rem
		left 1rem
		width 100%
		height 100%
		background $blue
	
	&__wrapper
		margin-bottom 6rem
	
	&__image
		width 100%
		padding-bottom calc(100%/3*2)
		background-size cover
		background-repeat no-repeat
		
	&__copy
		padding 3rem 3rem 3rem 4rem
		text--body($parchment)
		
		h1
			text--strong($parchment)
		
		p
			margin 3rem 0
			
			strong
				text--strong($parchment)
		
		a
			button--small($parchment,$blue)
