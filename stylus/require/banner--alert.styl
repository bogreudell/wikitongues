.wt_banner_alert
	display flex
	width 100%
	height auto
	text--body($parchment)
	font-size 1.28rem !important
	font-weight 700 !important
	text-transform uppercase !important
	align-items center

.banner_alert_container 
	display flex
	justify-content center
	padding .5rem
	background-color $blue
	border #dcdcdc80
	// border-style solid
	// border-width 0.5px
	width 100%
	height auto

#banner_alert_button
	padding 10px
	margin 10px
	width auto
	button--small($parchment,$blue)
	border none 
	white-space nowrap

#banner_alert_button_link
	text-decoration none

#banner_alert_close_button
	position absolute
	right 8px
	font-size 24px
	padding 10px
	margin-top 5px
	cursor pointer
