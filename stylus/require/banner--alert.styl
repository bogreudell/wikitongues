/* 
 * I would like to consolidate .banner_alert_container
 * with the nested .wt_banner-alert class below, but whenever 
 * I change it, the styling breaks and I don't know why. 
 */
 
.banner_alert_container 
	position relative
	display flex
	justify-content center
	width 100%
	height auto
	padding $margin0
	background-color $blue

.wt_banner-alert
	&__text
		display flex
		align-items center
		width 100%
		height auto
		text--body($parchment)
		font-size 1.28rem !important
		font-weight 700 !important
		text-transform uppercase !important
	
	&__button
		margin-left $margin0
		button--small($parchment,$blue)
	
		&--link
			text-decoration none
		
		&--close
			position absolute
			right 8px
			font-size 24px
			padding 10px
			margin-top 5px
			cursor pointer