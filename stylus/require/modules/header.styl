.wt_header
	position fixed
	z-index 10
	top 0
	left 0
	width 100%
	height 65px
	background $parchmentTransparent

	&__logo
		float left
		width 10%
		height 100%
		padding 8px
		text-align left

		img
			height 100%
			width auto
	
	&__nav
		float left
		width 90%
		padding 8px 8px 0 0
		text-align right
		
		&--menu
			display inline-block
			vertical-align middle
			opacity 0
			transition .2s opacity ease-in-out
			
			&.visible
				opacity 1
			
			li
				display inline
				margin auto 15px auto 0
				
				a
					interactiveType($black)
					
					&:hover
						color $blue
				
				&.current-menu-item
					a
						color $blue
		
		&--donate
			display inline-block
			vertical-align middle
			margin-top 1px

@media all and (max-width:$mobile)
	.wt_header
		width 100vw
		overflow hidden
		
		&__nav
			width 75%
			float right
			white-space nowrap
			overflow-x scroll