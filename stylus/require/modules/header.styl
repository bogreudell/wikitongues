.wt_header
	position fixed
	z-index 10
	top 0
	left 0
	width 100%
	height 65px
	background $parchmentTransparent

	&__logo
		float left
		width 10%
		height 100%
		padding 8px
		text-align left

		img
			height 100%
			width auto
	
	&__nav
		float left
		width 90%
		height 100px
		padding 0 10px 0 0
		text-align right
		
		&--menu
			display inline-block
			vertical-align bottom
			opacity 0
			transition .2s opacity ease-in-out
			
			&.visible
				opacity 1
			
			li
				display inline
				margin auto 15px auto 0
				
				a
					interactiveType($black)
					
					&:hover
						color $blue
				
				&.current-menu-item
					a
						color $blue
		
		&--donate
			display inline-block
			margin-top 26px
			
			a
				button(initial,$blue)
				padding 15px 20px !important
				interactiveType($parchment)
				transition .2s opacity ease-in-out
				
				&:hover
					opacity .9

				span:first-of-type
					margin-right 5px

@media all and (max-width:$mobile)
	.wt_header
		width 100vw
		overflow hidden
		
		&__nav
			width 75%
			float right
			white-space nowrap
			overflow-x scroll