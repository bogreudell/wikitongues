.wt_actions
	text-align center

	&__search
		display inline-block
		button(40%,$blue,$parchment)
		padding $margin1
		interactiveType($parchment)
		margin 0 1%
		
	&__contribute
		display inline-block
		button(40%,$blue,$parchment)
		padding $margin1
		border 2px solid $blue
		interactiveType($parchment)
		margin 0 1%
	
	&__signup
		display inline-block
		button(90%,$blue,$parchment)
		max-width 500px
		padding $margin1
		border 2px solid $blue
		interactiveType($parchment)
		margin $margin4 auto $margin2

@media all and (max-width:$mobile)
	.wt_actions
		&__signup
			margin $margin2 auto $margin1