.wt_thumbnails
	margin $margin1 auto
	text-align center
	
	&__wrapper
		margin 0 auto
	
	&__title
		text-align center
				
		h1
			margin $margin3 auto $margin1 
			headerType($black)
		
		h2
			width 90%
			max-width 900px
			margin auto
			subheadType($black)
	
	&__cta
		width 90%
		max-width 550px
		margin-top $margin2 !important
		interactiveType($parchment)
	
	&__video
		display inline-block
		vertical-align top
		border-radius 3px
		background $blue
		width 30%
		margin 2% 1% 0
		color $parchment
		overflow hidden
		box-shadow 1px 1px 3px grey
		box-sizing border-box
		
		&--image
			width 100%
			height auto
		
		&--metadata
			margin-top -2px
			box-sizing border-box
			padding $margin1 $margin0
			
			li
				margin-bottom $margin0
				
				&:last-of-type
					margin-bottom 0
					
				strong
					display block
					bodyTypeBold($parchment)
				
				span
					display block
					bodyType($parchment)
					
				a
					bodyTypeLink($parchment)
	
	&__lexicon
		display inline-block
		width 30%
		margin 2% 1% 0
		background $blue
		color $parchment
		box-sizing border-box
		padding $margin1 0
		border-radius 3px
		box-shadow 1px 1px 3px grey
		
		&--metadata
			margin-top -2px
			box-sizing border-box
			padding $margin1 $margin0
			
			li
				margin-bottom $margin0
				
				&:last-of-type
					margin-bottom 0
					
				strong
					display block
					bodyTypeBold($parchment)
				
				span
					display block
					bodyType($parchment)
					
				a
					bodyTypeLink($parchment)
	
	&__download
		display inline-block
		width 30%
		margin 2% 1% 0
		background $blue
		color $parchment
		box-sizing border-box
		border-radius 3px
		overflow hidden
		text-align center
		box-shadow 1px 1px 3px grey
		transition .2s opacity ease-in-out

		&:hover
			opacity .9
		
		&--image
			width 100%
			height auto
		
		&--metadata
			margin-top -2px
			box-sizing border-box
			padding $margin1
			
			li
				margin-bottom $margin0
				
				&:last-of-type
					margin-bottom 0

					span
						text-decoration underline
					
				strong
					display block
					bodyTypeBold($parchment)
				
				span
					display block
					bodyType($parchment)
					
		a
			text-decoration none !important
	
	&__language
		display inline-block
		vertical-align top
		width 30%
		margin 2% 1% 0
		border-radius 3px
		background $blue
		color $parchment
		overflow hidden
		box-shadow 1px 1px 3px grey
		box-sizing border-box
		transition .2s opacity ease-in-out
		
		a
			text-decoration none !important
		
		&:hover
			opacity .9

		&--image
			width 100%
			height auto
		
		&--metadata
			margin-top -2px
			box-sizing border-box
			padding $margin1 $margin0
			
			li
				margin-bottom $margin0
				
				&:last-of-type
					margin-bottom 0
					
				strong
					display block
					bodyTypeBold($parchment)
				
				span
					bodyType($parchment)
					
				a
					bodyTypeLink($parchment)

	&__error
		subheadType($black)

@media all and (max-width:$mobile)
	.wt_thumbnails
		&__title
			h1
				margin-top $margin2
				headerTypeMobile($black)
			
			h2
				subheadTypeMobile($black)
		
		&__video,
		&__lexicon,
		&__download
			width 90%
			margin 0 auto $margin0

		&__language
			width 48%
			margin .75%
			
			&--metadata
				padding-left $margin0
				padding-right $margin0
		
		&__cta
			margin-top $margin0 !important