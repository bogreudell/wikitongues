.wt_banner__short
	padding $margin3 0
	background $black
	color $parchment
	text-align center

	h1
		headerType($parchment)
		margin-bottom $margin1
	
	h2
		width 90%
		margin auto
		max-width 810px
		subheadType($parchment)

@media all and (max-width:$mobile)
	.wt_banner__short
		padding $margin2 0
		
		h1
			headerTypeMobile($parchment)
		
		h2
			subheadTypeMobile($parchment)