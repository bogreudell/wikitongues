.wt_banner
	position relative
	width 100%
	height calc(100vh/3*2)
	padding-top 80px
	box-sizing content-box
	background-position center
	background-size cover
	background-repeat no-repeat
	
	&:before
		content ''
		position absolute
		top 0
		width 100%
		height 100%
		background rgba(0,0,0,.3)
	
	&__copy
		position absolute
		top 50%
		right 5%
		transform translateY(-50%)
		width calc(100%/3)