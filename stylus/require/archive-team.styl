body
	&.post-type-archive-team
		.wt_team
			margin-top $margin3
			text-align center
			
			&#board-and-staff
				.wt_team__member
					width 29%
			
			&#advisors
				.wt_team__member
					width 29%
			
			&#interns-and-volunteers
				.wt_team__member
					width 20%
				
			&__title
				h1
					margin-bottom $margin1
					headerType($black)
			
			&__member
				display inline-block
				vertical-align top
				margin 0 1% 2% 1%
				text-align left
				
				&--image
					width 100%
					padding-bottom 100%
					margin-bottom $margin0
					background-size cover
					background-position center center
					border 2px solid $black
					box-sizing border-box
				
				&--noimage
					width 100%
					padding-bottom 100%
					margin-bottom $margin0
					background $black
					border 2px solid $black
					box-sizing border-box
				
				&--info
					h2
						display block
						subheadType($black)
					
					p						
						display block
						margin-top 7.5px
						bodyTypeBold($black)
						
					ul
						margin-top 20px
						
						li
							display inline-block
							margin-right $margin1
							
							a							
								color $blue
								font-size 1.75rem
								transition .2s opacity ease-in-out
								
								&:hover
									opacity .9
		
		.wt_footer
			padding-top $margin3

@media all and (max-width:$mobile)
	body
		&.post-type-archive-team
			.wt_team
				margin-top $margin2
				
				&__title
					h1
						headerTypeMobile($parchment)
				
				&__member
					width 47.5% !important
					margin 0 0.5% 15px !important
					text-align center
					
					&--info
						h2
							bodyTypeBold($black)
						
						p
							margin 5px
							bodyType($black)
							
						ul
							li
								margin 0 7.5px
			
			.wt_footer
				padding-top $margin2