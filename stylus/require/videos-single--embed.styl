.wt_single-videos
	&__content
		width 90%
		max-width 1000px
		margin 6rem auto
		
	&__video
		position relative
		width 100%
		height 0
		overflow hidden
		padding-top 56.25%
		margin-bottom 6rem
		text--strong($parchment)
		text-align center
		
		video
			background $black
			
		video,
		iframe
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			width 100%
			height 100%
		
		p
			background $purple
			
		img
			width 100%
			height auto

@media all and (max-width:$mobile)
	.wt_single-videos
		&__content
			margin 2rem auto
		
		&__video
			margin-bottom 3rem