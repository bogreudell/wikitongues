body
	max-width 1440px
	margin auto
	box-shadow 0 0 100px rgba(0,0,0,.05)
	padding-top 100px
	background $parchment
	
	&.home
		padding-top 0 !important
	
.wt_header
	z-index 3
	display flex
	flex-direction row
	align-items center
	position fixed
	top 0
	left 50%
	transform translateX(-50%)
	width 100%
	max-width 1440px
	height 60px
	padding 0 1.5rem
	box-sizing border-box
	background $parchment
	
	&.transparent-background
		background none !important
	
	&__logo
		flex-grow initial
		
		&--light
			display none
			
			&.transparent-background
				display block !important
		
		&--dark
			display block
			
			&.transparent-background
				display none !important
				
		img
			height 40px
			width auto
	
	&__searchbar
		position relative
		flex-grow initial
		margin-left 15px
		border 1px solid #dcdcdc
		
		i
			position absolute
			top 50%
			left 7.5px
			transform translateY(-50%)
		
		input
			&[type="search"]
				border 0
				padding 5px 10px 5px 27.5px
				
			&[type="submit"]
				display none
	
	&--secondary
		z-index 2
		position fixed
		top 60px
		left 0
		width 100%
		padding 20px
		background $white
		border-top 6px solid $blue
					
	&__nav
		flex-grow 3
		text-align right
		font-size 0
		
		&.transparent-background
			&>ul>li
				background $parchment
				border none !important
				
				&>a
					color $blue
		
		&>ul>li
			position relative
			margin-left 1.25rem
			button--small($blue, $parchment)
			
			&.current_page_item,
			&.current_page_parent
				background $white !important
				
				&>a
					color $blue !important
			
			&>a // button--small is designed for a elements not li
				text-decoration none
				color $parchment

			&:hover
				cursor pointer
				background $white !important
				
				&>a
					color $blue !important
										
				.sub-menu
					display block
		
		.sub-menu
			display none
			position absolute
			top 100%
			left 0
			width 100%
			padding 5px
			background $white
			text-align center
			border-top 1px solid $blue
			box-shadow 0 0 100px rgba(0,0,0,.05)
			// border-top 8px solid $blue
			// border-right 1px solid $blue
			// border-bottom 1px solid $blue
			// border-left 1px solid $blue
			
			li
				display block
				margin 10px 0
				
				a
					color $blue
					text-decoration none
		
		&--secondary
			text-align center
			
			li
				display inline-block
				margin 0 0 0 3rem
				
				&:first-of-type
					a
						color $black
						
						&:hover
							cursor default
					
					&:after
						content ''
						margin-left 3rem
						border-right 1px #dcdcdc solid
				
				a
					text--body($blue)
					font-size 1.28rem !important
					text-decoration none
					text-transform uppercase