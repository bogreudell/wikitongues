.wt_newsletter
	padding 6rem 0
	background $purple
	text-align center
	
	form
		&>div
			display flex
			justify-content center
			
		.clear
			position relative
			
			i
				position absolute
				top 50%
				transform translateY(-50%)
				right 1.5rem
				color $parchment
				font-size 1.6rem
		
		input
			border 0
			
			&[type="email"]
				button--large($parchment, $black)
			
			&[type="submit"]
				button--large($blue, $parchment)
				padding-right 4rem // clunky override to position iframe arrow

.wt_footer
	padding 6rem
	background $black
	text--body($parchment)
	font-size 1.28rem !important
	
	&__section
		&:first-of-type
			display flex
			flex-direction row
		
		&:last-of-type
			text-align center

	&__nav
		flex-grow 3
		text-transform uppercase
		
		>ul
			display flex
			flex-direction row
			
			li					
				a
					text--body($parchment)
					text-decoration none
					font-size 1.28rem !important
			
			&>li
				margin-right 3rem
				
				&>a
					font-weight 600 !important
		
		.sub-menu
			margin-top 1.5rem
		
	&__meta
		flex-grow initial
		text-align right
		
	&__logo
		img
			max-width 150px
	
	&__address
		margin 1.5rem 0
		
	&__land-acknowledgement
		margin 3rem 0 1.5rem

	&__copyright
		font-weight 700 !important