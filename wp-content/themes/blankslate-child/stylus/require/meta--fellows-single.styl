.wt_fellow__meta
	width 90%
	max-width 50vw
	margin 0 auto
	padding-top 6.4rem

	.head
		display flex
		width 100%
		align-items flex-end
		margin-bottom 64px

		div.image, div.name
			float left
			vertical-align top
			width 50%

		div.image
			height 0
			width (100/3)*2%
			padding-bottom 37.5%
			background-size cover
			background-color $blue
			background-position center
			border-radius 16px 0 16px 0

		div.name
			width (100/3)*1%
			padding 0 0 0 16px
			height 100%

			h1
				text--header($black)
				font-size 4rem
				margin-bottom 16px

		.info
			display inline-block

			a.language
				border 2px solid $blue
				border-radius 8px 0 8px 0
				text-decoration none
				display flex
				font-size 1.6rem
				padding 8px 16px
				margin-right 8px
				margin-bottom 8px
				float left
				align-items flex-end
				width fit-content

				&:last-of-type
					margin-right 0

				span.identifier, p
					float left
					line-height 2
					font-size inherit

				span.identifier
					color $blue
					font-weight 800
					flex initial
					min-width initial
					margin-right 1rem

				p
					text--body($blue)
					line-height 2
					font-size inherit

			> p
				text--body($black)
				margin-bottom .8rem

			a.cohort
				width 100%
				display block
				text--body($blue)
				margin 0 0 3.2rem 0
				text-decoration none
				font-weight bold

	article
		margin-bottom 1.6rem

		strong
			text--strong($black)

	ul
		margin-top .5rem

		li
			display inline-block
			margin-right 1.6rem
			text--body($black)

			&:last-of-type
				margin-right 0

			a
				text--body($blue)
				text-decoration none

	&--links
		ul li
			display block !important

@media all and (max-width:$mobile)
	.wt_fellow__meta
		max-width initial

		.head
			flex-direction column
			margin-bottom 32px

			div.image,
			div.name
				width 100%

			div.image
				padding-bottom 56.25%
				margin-bottom 16px

			div.name
				padding 0