.wt_meta--languages-single
	width calc(100%/4)
	float left
	padding-left 6rem
	margin-bottom 6.4rem

	section
		margin-bottom 1rem

	strong
		text--strong($black)

	p
		text--body($black)

	h2
		text--strong($black)
		margin-bottom 1.5rem
		padding-bottom 12px

		&.wt_sectionHeader
			border-bottom 1px solid $lightPurple
	h3
		text--strong($blue)

	ul
		border-bottom 1px solid $lightPurple
		margin-bottom 16px

		li
			margin-bottom 1.2rem


		&.resources
			li
				display inline-block

			a
				clear both

				&:last-of-type
					float left
					anchor($blue, 2px)
					margin-left 1rem
	a
		text--body($blue)
		text-decoration none
		display block

		strong
			text--strong($blue)

		span
			text--body($blue)

		&.official-link
			padding 4px 8px
			border-left 2px solid $blue
			font-weight bold

			&:hover
					text-decoration underline

		&.donate-cta
			background-color $red
			color $white
			padding 1rem 2rem
			border-radius 4px
			text-align center
			display inline-block
			margin-top 1rem

@media all and (max-width:$mobile)
	.wt_meta--languages-single
		float none
		margin-bottom 6rem
		width 100%
		padding 0 3rem