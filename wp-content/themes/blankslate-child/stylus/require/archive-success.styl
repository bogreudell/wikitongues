.page-template-template-archive-success
	.wt_banner
		background-position-y -150px
		background-position-x right
		background-size 110%

	.wt_carousel__wrapper
		background $black
		padding 3rem
		*
			color $parchment

.wt_archive
	&__faq
		display flex
		flex-direction column
		max-width $content
		margin 0 auto

		h4
			margin 0 auto 2.4rem
			width 100%
			text--header($black)

		h2
			text--strong($black)
			min-height @font-size * @line-height * 2 // 2 lh
			text-align left
			margin 0

		ul
			width 100%
			max-width $content
			margin 0 auto 3rem
			column-count 3
			column-gap 16px

			li
				float left
				width 100%
				list-style-type none

				p
					margin 0 auto 3rem
					width 100%
					max-width 600px
					text--body($black)

					strong
						text--strong($black)
						min-height 3.3em
						display inline-block

					a
						text--body($blue)
						anchor($blue, 2px)

div.success_cta
	display flex
	justify-content center
	flex-direction column
	align-items center
	gap 1.6rem
	margin 8rem 0

	h2
		text--header($black)
		max-width $content
		text-align center

	section
		background $blue-22
		border-radius 8px

		a
			display block
			text-decoration none
			text--strong($blue, 2rem) // issue
			font-size 2rem // issue
			padding 24px
			line-height 2.6rem

@media all and (max-width:$mobile)
	.page-template-template-archive-success
		.wt_banner
			background-position initial

	.wt_archive
		&__faq
			padding 0 3rem

			h1
				margin-bottom 4rem
				font-size 3rem // mobile
				text-align-last left

			section
				width 100%
				max-width $content
				column-count 1
				margin 0 auto

				article
					p
						strong
							min-height 2em