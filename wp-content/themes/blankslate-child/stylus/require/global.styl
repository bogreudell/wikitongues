// responsive breakpoints
$shortScreen = 699px // for short and wide browsers
$smallScreen = 1024px
$tablet = 899px
$mobile = 768px // consider different number

// margins
$margin0 = 15px
$margin1 = 30px
$margin2 = 60px
$margin3 = 90px
$margin4 = 120px

// colors
$white = #ffffff
$whiteTransparent = rgba(255,255,255,.97)
$parchment = #fffcef
$parchmentTransparent = rgba(255,252,239,.97)
$black = #101010
$blackTransparent = rgba(16, 16, 16,.97)
$grey = #dcdcdc
$dark_grey = #979797
$red = #e52600
$blue = #3814A5
$purple = #9581c2
$lightPurple = #D4CCE0
$yellow = #ffff00

// typography
html
	font-size 62.5%
	
@media all and (max-width:$mobile)
	html
		font-size 51.398%

text--header(a)
	font-family 'Schnyder Wide M Web'
	font-weight 300
	font-style normal
	font-stretch normal
	font-size 6.08rem
	color a
	
text--body(a)
	font-family 'Graphik Web'
	font-weight 400
	font-style normal
	font-stretch normal
	font-size 1.6rem
	line-height 1.3
	color a
	
text--strong(a)
	font-family 'Graphik Web'
	font-weight 700
	font-style normal
	font-stretch normal
	font-size 1.6rem
	line-height 1.3
	color a

button--large(a,b)
	display inline-block
	padding 1.5rem 2rem
	background a
	font-family 'Graphik Web'
	font-weight 400
	font-style normal
	font-stretch normal
	font-size 1.6rem
	line-height 1.3
	text-transform uppercase
	text-decoration none
	color b
	text-wrap nowrap

button--small(a,b)
	display inline-block
	padding 1.25rem 1.5rem
	background a
	border 1px solid $blue
	font-family 'Graphik Web'
	font-weight 400
	font-style normal
	font-stretch normal
	font-size 1.28rem
	text-transform uppercase
	text-decoration none
	color b
	text-wrap nowrap

// misc
.clear
	clear both

.no-scroll
	overflow hidden