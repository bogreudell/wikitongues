.react-typeahead-container
  float left
  display inline-block
  margin-left 2rem

  .typeahead-form
    position initial
    width initial
    max-width initial
    margin initial
    font-family 'Graphik Web'
    font-size 1.28rem

    .typeahead-input
      background  $parchment
      border-radius 8px
      font-family inherit
      font-size inherit
      outline-color $blue
      transition-property background, width
      transition-duration 0.6s
      transition-timing-function cubic-bezier(0.16, 1, 0.3, 1);

      &::placeholder
        color $parchment
        color $blue
        font-family 'Graphik Web'
        font-style italic
        font-size inherit

      &:active,
      &:focus
        color $blue

        &::placeholder
          color $blue

    .typeahead-list
      background $parchment
      font-family inherit
      font-size inherit
      border none
      margin-top 4px


      .typeahead-item
        &.selected
          background #E1DCF2

          &[data-resource="true"]::before,
          span.highlight
            background-color #C3B9E4

        &:hover
          background #EBE8F6

          &[data-resource="true"]::before,
          span.highlight
            background-color #C7BDE6


        &[data-resource="true"]::before,
        .highlight
          background-color #CDC4E8

        &[data-resource="true"]
          .identifier
            color $blue

        span
          &.label
            position relative
            color $blue
            font-family inherit
            font-size inherit

          .highlight
            background #CDC4E8
            transition: background 0.6s cubic-bezier(0.65, 0, 0.35, 1);